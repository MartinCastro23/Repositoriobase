#Funciones

a = 21 #asignamos un valor a
b = 14 #asignamosun valor b

def suma(a,b): #Definimos la función 
    return (a+b) #Decimos que nos devuelva la suma de los números
print("La suma de a y b es", suma(a,b)) #Imprimimos la función
suma(a,b) #Invocamos la función

def resta(a,b): #Definimos la función 
    return (a-b) #Decimos que nos devuelva la resta de los números
print("La resta de a y b es", resta(a,b)) #Imprimimos la función
resta(a,b) #Invocamos la función

def multiplicación(a,b): #Definimos la función 
    return (a*b) #Decimos que nos devuelva la multiplicación de los números
print("La multiplicación de a y b es", multiplicación(a,b)) #Imprimimos la función
multiplicación(a,b) #Invocamos la función           
def división(a,b): #Definimos la función 
    return (a/b) #Decimos que nos devuelva la división de los números
print("La división de a y b es", división(a,b)) #Imprimimos la función
división(a,b) #Invocamos la funcción

def módulo(a,b): #Definimos la función 
    return (a%b) #Decimos que nos devuelva el módulo de los números
print("El módulo de a y b es", módulo(a,b)) #Imprimimos la función
módulo(a,b) #Invocamos la función

def exponente(a,b): #Definimos la función 
    return (a**b) #Decimos que nos devuelva el exponente de los números
print("El exponente de a y b es", exponente(a,b)) #Imprimimos la función
exponente(a,b) #Invocamos la función

def división_entera(a,b): #Definimos la función 
    return (a//b) #Decimos que nos devuelva la división entera de los números
print("La división entera de a y b es", suma(a,b)) #Imprimimos la función
división entera(a,b) #Invocamos la función

